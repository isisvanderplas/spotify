
<%= form_for([ :artist, @song]) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :artist_id %>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>

  <%= f.submit (@song.new_record? ? "Create" : "Update") %>

<% end %>

<%= link_to "[Back]", artist_songs_path %>
